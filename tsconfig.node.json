{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "types": ["node", "vite/client", "vitest/globals"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    
    // 型チェック強化のための追加設定
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    // デバッグ支援の改善
    "sourceMap": true,
    "declaration": true,
    
    // ビルドパフォーマンス向上
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": [
    "vite.config.ts", 
    "vitest.config.ts",
    "*.d.ts",
    "env.d.ts",
    "scripts/*.ts"
  ]
}