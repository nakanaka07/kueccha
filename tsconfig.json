{
  "compilerOptions": {
    "target": "es2020", // More specific target
    "module": "es2020",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true, // Use with caution
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"] // Example additional alias
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true, // Incremental builds
    "types": [] // Or specific types if needed
  },
  "include": [
    "src",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

