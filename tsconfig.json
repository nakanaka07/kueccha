{
  "$schema": "https://json.schemastore.org/tsconfig", // tsconfig.jsonのスキーマを指定
  "compilerOptions": {
    "target": "ESNext", // コンパイル後のJavaScriptのバージョンを指定
    "module": "ESNext", // モジュールシステムを指定
    "moduleResolution": "node", // モジュール解決方法をNode.jsスタイルに設定
    "lib": ["DOM", "DOM.Iterable", "ES2022"], // 使用するライブラリを指定
    "esModuleInterop": true, // ESモジュールとの互換性を有効にする
    "allowSyntheticDefaultImports": true, // デフォルトインポートを許可
    "strict": true, // 厳格な型チェックを有効にする
    "strictNullChecks": true, // nullチェックを厳格にする
    "strictFunctionTypes": true, // 関数の型チェックを厳格にする
    "strictBindCallApply": true, // bind, call, applyの型チェックを厳格にする
    "strictPropertyInitialization": true, // プロパティの初期化を厳格にする
    "noImplicitThis": true, // 暗黙のthisを禁止
    "alwaysStrict": true, // 常にstrictモードでコンパイル
    "forceConsistentCasingInFileNames": true, // ファイル名の大文字小文字を厳格にする
    "resolveJsonModule": true, // JSONモジュールの解決を許可
    "isolatedModules": true, // 各ファイルを個別のモジュールとして扱う
    "jsx": "react", // JSXの変換方法を指定
    "incremental": true, // 増分コンパイルを有効にする
    "outDir": "./dist", // 出力ディレクトリを指定
    "paths": {
      "@/*": ["./src/*"] // エイリアスを設定
    },
    "typeRoots": ["./node_modules/@types", "./types"], // 型定義ファイルのルートを指定
    "skipLibCheck": true // ライブラリの型チェックをスキップ
  },
  "include": ["src/**/*", "server.ts", "vite.config.js", "eslint.config.js"], // コンパイル対象のファイルを指定
  "exclude": ["dist", "node_modules"], // コンパイル対象外のディレクトリを指定
  "ts-node": {
    "transpileOnly": true, // トランスパイルのみを行う
    "esm": true // ESモジュールをサポート
  }
}
